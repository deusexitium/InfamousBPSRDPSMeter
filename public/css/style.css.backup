/* BPSR Meter - Enhanced Edition */
/* Hybrid UI combining NeRooNx's modern design with original's performance */

:root {
    /* Color Palette - Modern dark theme */
    --bg-dark: rgba(15, 20, 30, 0.85);
    --bg-darker: rgba(10, 15, 22, 0.90);
    --bg-light: rgba(25, 32, 45, 0.75);
    --accent-primary: #4a9eff;
    --accent-secondary: #6bb3ff;
    --text-primary: #ffffff;
    --text-secondary: #b4bcc9;
    --text-muted: #6c7a89;
    --border: rgba(255, 255, 255, 0.1);
    --border-hover: rgba(74, 158, 255, 0.4);
    
    /* Spacing */
    --gap-xs: 2px;
    --gap-sm: 4px;
    --gap-md: 6px;
    --gap-lg: 8px;
    
    /* Border radius */
    --radius: 8px;
    --radius-sm: 4px;
    
    /* Transitions */
    --transition: 0.15s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 0.3s ease;
    
    /* Shadows */
    --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.2);
    --shadow-md: 0 4px 8px rgba(0, 0, 0, 0.3);
    --shadow-glow: 0 0 12px rgba(74, 158, 255, 0.5);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: transparent;
    color: var(--text-primary);
    overflow: hidden;
    line-height: 1.5;
    width: fit-content;
    height: fit-content;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    pointer-events: none; /* Body is click-through by default */
}

body.locked {
    cursor: none;
}

body.locked.alt-pressed {
    cursor: default;
}

.dps-meter {
    width: fit-content;
    min-width: 400px;
    max-height: 90vh; /* Allow scrolling for many players */
    background: var(--bg-dark);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: var(--gap-xs);
    display: flex;
    flex-direction: column;
    gap: var(--gap-xs);
    border-radius: var(--radius);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border);
    pointer-events: auto; /* Meter itself accepts events */
}

/* Controls header */
.controls {
    display: flex;
    align-items: center;
    gap: var(--gap-sm);
    padding: var(--gap-sm);
    background: var(--bg-darker);
    border-radius: var(--radius);
    border: 1px solid var(--border);
    -webkit-app-region: no-drag;
    pointer-events: auto; /* Always accept mouse events */
}

/* Base button styles */
.control-button {
    width: 28px;
    height: 28px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition);
    font-size: 11px;
    flex-shrink: 0;
}

.control-button:hover {
    background: var(--accent-primary);
    color: var(--text-primary);
    border-color: var(--accent-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
}

.control-button:active {
    transform: translateY(0);
}

/* Sort buttons */
.sort-button {
    padding: 6px 14px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
    cursor: pointer;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all var(--transition);
    flex-shrink: 0;
}

.sort-button:hover {
    background: rgba(74, 158, 255, 0.15);
    color: var(--accent-primary);
    border-color: var(--border-hover);
}

.sort-button.active {
    background: var(--accent-primary);
    color: var(--text-primary);
    border-color: var(--accent-primary);
    box-shadow: 0 0 8px rgba(74, 158, 255, 0.4);
}

/* Advanced/Lite button (Nearby/Solo) */
.advanced-lite-btn {
    width: auto !important;
    padding: 6px 12px !important;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.advanced-lite-btn.solo {
    background: rgba(74, 158, 255, 0.2);
    color: var(--accent-primary);
    border-color: var(--accent-primary);
}

/* Drag indicator - NATIVE webkit dragging for performance */
.drag-indicator {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
    cursor: grab;
    user-select: none;
    -webkit-app-region: drag; /* NATIVE DRAGGING - Much faster! */
    flex-shrink: 0;
    font-size: 12px;
    pointer-events: auto; /* Always draggable */
}

.drag-indicator:active {
    cursor: grabbing;
}

.drag-indicator:hover {
    color: var(--accent-primary);
}

.dps-meter.locked .drag-indicator {
    opacity: 0.3;
    cursor: not-allowed;
    -webkit-app-region: no-drag;
}

/* Sync button */
.sync-button {
    width: 28px;
    height: 28px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all var(--transition);
    color: var(--text-secondary);
    font-size: 11px;
    position: relative;
    flex-shrink: 0;
}

.sync-button:hover {
    background: var(--accent-primary);
    color: var(--text-primary);
    border-color: var(--accent-primary);
}

.sync-button:hover .sync-icon {
    animation: spin 0.5s ease-in-out;
}

.sync-icon {
    font-size: 11px;
    display: block;
    color: inherit;
}

.sync-timer {
    position: absolute;
    font-size: 9px;
    font-weight: 700;
    color: var(--text-primary);
    display: none;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Lock and Close buttons */
.lock-button {
    background: rgba(74, 158, 255, 0.1);
}

.lock-button:hover {
    background: var(--accent-primary);
}

.close-button {
    background: rgba(220, 53, 69, 0.2);
    border-color: rgba(220, 53, 69, 0.4);
}

.close-button:hover {
    background: rgba(220, 53, 69, 0.6);
    border-color: rgba(220, 53, 69, 0.8);
}

.dps-meter.locked .close-button {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
}

/* Reset button */
#reset-button {
    background-color: rgba(219, 104, 121, 0.2);
    border-color: rgba(219, 104, 121, 0.4);
}

#reset-button:hover {
    background-color: rgba(219, 104, 121, 0.6);
    border-color: rgba(219, 104, 121, 0.8);
}

/* Loading indicator */
#loading-indicator {
    text-align: center;
    padding: 20px;
    color: var(--accent-primary);
    font-size: 24px;
    display: flex;
    justify-content: center;
    align-items: center;
}

#loading-indicator .fa-spinner {
    animation: spin 1s linear infinite;
}

/* Player bars container */
#player-bars-container {
    display: flex;
    flex-direction: column;
    gap: var(--gap-xs);
    max-height: 70vh; /* Scrollable for many players */
    overflow-y: auto;
    overflow-x: hidden;
    pointer-events: none; /* Player bars are click-through */
    padding-right: 4px; /* Space for scrollbar */
}

/* Player bar */
.player-bar {
    background: var(--bg-light);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: var(--gap-md);
    position: relative;
    overflow: hidden;
    transition: all var(--transition-slow);
    min-height: 56px;
}

.player-bar:hover {
    border-color: var(--border-hover);
    background: rgba(25, 32, 45, 0.85);
    transform: translateX(2px);
}

/* Party member styling */
.player-bar.party-member {
    border-left: 3px solid #ffaa00;
    background: rgba(255, 170, 0, 0.05);
}

.player-bar.party-member:hover {
    background: rgba(255, 170, 0, 0.12);
    border-left-color: #ffc847;
}

.player-bar::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: var(--damage-percent, 0%);
    background: var(--damage-bg-color, transparent);
    transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 0;
    opacity: 0.6;
}

/* Player info layout */
.player-info {
    display: flex;
    align-items: center;
    gap: var(--gap-md);
    position: relative;
    z-index: 1;
}

/* Player position badge */
.player-position {
    font-size: 13px;
    font-weight: 700;
    color: var(--text-primary);
    min-width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition);
}

/* Top 1 - Gold */
.player-position.rank-1 {
    background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
    border-color: #ffa500;
    color: #1a1a1a;
    box-shadow: 0 0 16px rgba(255, 215, 0, 0.6), var(--shadow-sm);
    font-size: 14px;
}

/* Top 2 - Silver */
.player-position.rank-2 {
    background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
    border-color: #a8a8a8;
    color: #1a1a1a;
    box-shadow: 0 0 12px rgba(192, 192, 192, 0.5), var(--shadow-sm);
}

/* Top 3 - Bronze */
.player-position.rank-3 {
    background: linear-gradient(135deg, #cd7f32 0%, #e89b5e 100%);
    border-color: #b87333;
    color: #1a1a1a;
    box-shadow: 0 0 12px rgba(205, 127, 50, 0.5), var(--shadow-sm);
}

/* Local player - Blue (when NOT in top 3) */
.player-position.local-player {
    background: linear-gradient(135deg, #4a9eff 0%, #6bb3ff 100%);
    border-color: #3b8aef;
    color: #ffffff;
    box-shadow: 0 0 16px rgba(74, 158, 255, 0.7), var(--shadow-sm);
    animation: pulse 2s ease-in-out infinite;
}

/* Local player in Top 1 - Gold with blue border */
.player-position.rank-1.local-player {
    background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
    border: 2px solid #4a9eff;
    color: #1a1a1a;
    box-shadow: 0 0 20px rgba(74, 158, 255, 1), 0 0 12px rgba(255, 215, 0, 0.8), var(--shadow-sm);
}

/* Local player in Top 2 - Silver with blue border */
.player-position.rank-2.local-player {
    background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
    border: 2px solid #4a9eff;
    color: #1a1a1a;
    box-shadow: 0 0 20px rgba(74, 158, 255, 1), 0 0 10px rgba(192, 192, 192, 0.7), var(--shadow-sm);
}

/* Local player in Top 3 - Bronze with blue border */
.player-position.rank-3.local-player {
    background: linear-gradient(135deg, #cd7f32 0%, #e89b5e 100%);
    border: 2px solid #4a9eff;
    color: #1a1a1a;
    box-shadow: 0 0 20px rgba(74, 158, 255, 1), 0 0 10px rgba(205, 127, 50, 0.7), var(--shadow-sm);
}

@keyframes pulse {
    0%, 100% {
        box-shadow: 0 0 16px rgba(74, 158, 255, 0.7), var(--shadow-sm);
    }
    50% {
        box-shadow: 0 0 24px rgba(74, 158, 255, 1), var(--shadow-sm);
    }
}

/* Class icon */
.class-icon {
    width: 44px;
    height: 44px;
    border-radius: var(--radius-sm);
    object-fit: cover;
    border: 1px solid var(--border);
    opacity: 0.95;
    flex-shrink: 0;
    transition: all var(--transition);
}

.player-bar:hover .class-icon {
    opacity: 1;
    border-color: var(--border-hover);
}

/* Player details */
.player-details {
    display: flex;
    flex-direction: column;
    gap: var(--gap-sm);
    flex-grow: 0;
    min-width: 140px;
}

.player-name {
    font-size: 13px;
    font-weight: 600;
    color: var(--text-primary);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 200px;
}

/* HP Bar */
.hp-bar {
    position: relative;
    width: 140px;
    height: 20px;
    background: rgba(0, 0, 0, 0.5);
    border-radius: var(--radius-sm);
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.4);
}

.hp-fill {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    transition: width 0.3s ease, background 0.3s ease;
    border-radius: var(--radius-sm);
    box-shadow: inset 0 1px 3px rgba(255, 255, 255, 0.2);
}

.hp-text {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 10px;
    font-weight: 700;
    color: var(--text-primary);
    text-shadow: 
        0 0 4px rgba(0, 0, 0, 1),
        0 1px 3px rgba(0, 0, 0, 1);
    z-index: 1;
    letter-spacing: 0.3px;
}

/* Player stats */
.player-stats-main {
    display: flex;
    gap: var(--gap-md);
    align-items: center;
    justify-content: flex-end;
    margin-left: auto;
}

.stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1px;
    min-width: 52px;
}

.stat-label {
    font-size: 8px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    color: var(--text-secondary);
    white-space: nowrap;
}

.stat-value {
    font-size: 11px;
    font-weight: 700;
    color: var(--text-primary);
}

/* Scrollbar styling */
::-webkit-scrollbar {
    width: 6px;
}

::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.02);
}

::-webkit-scrollbar-thumb {
    background: rgba(74, 158, 255, 0.3);
    border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
    background: rgba(74, 158, 255, 0.5);
}

/* Responsive design */
@media (max-width: 768px) {
    .dps-meter {
        min-width: 350px;
    }
    .stat-value {
        font-size: 10px;
    }
}
